#!/usr/bin/env ruby

require 'git/contest/version'
require 'trollop'

SUB_COMMANDS = %w(init start finish submit)
global_opts = Trollop::options do
  version "git-contest #{Git::Contest::VERSION} (c) 2013 Hiroyuki Sano"
  stop_on SUB_COMMANDS
end

cmd = ARGV.shift
case cmd
when "init", "start"
  puts "git-contest-#{cmd} #{ARGV}"
  system "git-contest-#{cmd} #{ARGV.join(' ')}"
else
  puts <<-EOF
usage: git contest <subcommand>

Available subcommands are:
  init        Initialize a new git repo.
  start       Start a new feature branch.
  finish      Finish a feature branch.
  submit      Submit a solution.

Try 'git contest <subcommand> help' for details.
EOF
end


